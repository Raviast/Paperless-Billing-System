<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/public/css/common.css">
</head>

<body>
  <%- include('partials/header',{user:company.company_name,flag:company.billing_flag}) -%>
  <div class="container">
    <div class="row">
      <div class="col-lg-offset-2 col-lg-8">
        <div class="reg_form">

          <h2 class="text-center">Payment</h2>
          <form class="form-group text-center" name="pay_details" method="GET" action="/bill">
            <div class="row">
              <div class="col-lg-6">
            <label for="customer_name_input">Customer Name</label>
              <input type="text" name="customer_name_input" class="form-control" value= <%= data.customer_name %> readonly>
            </div>
            <div class="col-lg-6">
          <label for="customer_name_input">Total Amount</label>
            <input type="text" name="total_input" class="form-control" value=<%= data.total_amount %> readonly>
          </div>
            </div>
            <div class="row">
            <div class="col-lg-12">
              <label for="mode_select_input" >Select Payment Mode</label>
              <font color='black'>
              <select name="mode_select_input" class="form-control">
                <option value="1" selected>Cash</option>
                <option value="2"> Credit Card</option>
                <option value="3"> Debit Card</option>
                <option value="4"> Online Wallet</option>
              </select>
            </font>

          </div>

</div>
</br>
            <button class="btn btn-primary">Sign Bill Receipt</button>
          </form>
        </div>
      </div>
      <div class="col-lg-3"></div>

    </div>
  </div>
<%- include('partials/footer.ejs') %>
</body>
</html>
