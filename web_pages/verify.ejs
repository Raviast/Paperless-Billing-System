<!DOCTYPE HTML>
<html>
  <head>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width,initial-scal-1.0">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
     <link rel="stylesheet" type="text/css" href="/public/css/common.css">
</head>
<body>
  <%- include('partials/header',{user:user,flag:f1}) -%>
 <div class="container col-sm-12" id="mainform">
    <div style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="reg_form">
                <h4 class="text-center">Upload Bill Receipt</h4>
            <div class="text-center" >
              <hr>
                <form class="form-horizontal" role="form" method="POST" action="/result" enctype="multipart/form-data">

                     <div class="form-group">
                        <label for="image" class="col-md-3 control-label">Receipt PDF File</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="file" id="file" name="filename" accept="" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-1 col-md-9">
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </div>
                </form>
             </div>
        </div>
    </div>
</div>
<div>
  <div class='text-center reg_form'>
    <% if(flag!=0){ %>
        <% if(flag!=1){ %>
          <img src="./public/images/verified.png" alt="verified successfully" style="width:300px;height:300px;">
         <% } else { %>
          <img src="./public/images/Unverified.jpg" alt="Not verified" style="width:300px;height:300px;">
        <% } %>
      <% } %>
</div>
</div>
</body>
<%- include('partials/footer.ejs') -%>
</html>
