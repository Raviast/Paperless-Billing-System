<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/public/css/common.css">

</head>
<body>

  <%- include('partials/header',{user:company.company_name,flag:company.billing_flag}) -%>

<div class="container reg_form" style="margin:10px; margin-left:100px;background:#111">
	<h4 class="text-center">Bill Details</h4>
<form class="form-horizontal" style="border-style: outset; border-radius: 5px;padding: 20px;" ">
<div class="container">
	<div class="row clearfix">
		<div class="col-md-4 col-md-push-1">
			<table class="table table-bordered" id="tab_logic_total">
				<tbody>
					<tr>
						<th class="text-center">Date</th>
						<td class="text-center">
								<input type="text"  class="form-control" value= "<%= data[0].bill_date_time %>" readonly/>
							</td>
					</tr>
					<tr>
						<th class="text-center">Company CIN </th>
						<td class="text-center"><input type="text" value="<%= company.company_id %>" class="form-control" id="cin_no" readonly /></td>
					</tr>
					<tr>
						<th class="text-center">Company GSTIN</th>
						<td class="text-center"><input type="text" name='gst_no' placeholder='#' value="<%= company.gstin %>" class="form-control" id="gst_no" readonly /></td>
					</tr>
				</tbody>
				</table>
					</div>
					<div class="col-md-5 col-md-push-1">
						<table class="table table-bordered" id="tab_logic_total">
						<tbody>
							<tr>
						<th class="text-center">Customer name</th>
						<td class="text-center"><input type="text" name='customer_name' id="customer_name" value=<%= data[2].customer_name %> class="form-control" readonly/></td>
					</tr>
					<tr>
						<th class="text-center">Customer Email</th>
						<td class="text-center"><input type="text" name='customer_email' id="customer_email" value="<%= data[2].email %>" class="form-control" readonly/></td>
					</tr>
					<tr>
						<th class="text-center">Customer mobile</th>
						<td class="text-center"><input type="number" name='mobile_no' id="mobile_no[]" value="<%= data[2].contact %>" class="form-control" readonly/></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	</div>
<div class="container">
  <div class="row clearfix">
    <div class="col-md-10">
			<hr>
      <table class="table table-bordered" id="tab_logic">
        <thead>
          <tr>
						<th class="text-center">#</th>
            <th class="text-center"> Barcode </th>
            <th class="text-center"> Product </th>
            <th class="text-center"> Perchased Qty </th>
            <th class="text-center"> Unit Price </th>
						<th class="text-center"> Gst% </th>
            <th class="text-center"> Category </th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0;i<data[1].length;i++) { %>
          <tr>
						<td>1</td>
            <td><input type="text" value= "<%= data[1][i].product_desc %>" class="form-control" readonly/></td>
            <td><input type="text" value= "<%= data[1][i].barcode_id %>" class="form-control" readonly/></td>
            <td><input type="number" value= "<%= data[1][i].perchased_qty %>" class="form-control" readonly/></td>
            <td><input type="number" value= "<%= data[1][i].unit_price_RS %>" class="form-control" readonly/></td>
						<td><input type="number" value="<%= data[1][i].gst %>" class="form-control" readonly/></td>
            <td><input type="text" value= "<%= data[1][i].category %>" class="form-control" readonly/></td>
          </tr>
           <% } %>
        </tbody>
      </table>
			<hr>
    </div>
  </div>

  <div class="row clearfix" style="margin-top:20px">
    <div class="col-md-5 col-md-push-5">

      <table class="table table-bordered" id="tab_logic_total">
        <tbody>
          <tr>
            <th class="text-center">Grand Total</th>
            <td class="text-center"><input type="number" class="form-control" value="<%= data[0].total_amount %>" readonly/></td>
           </tr>
            <tr>
            <th class="text-center">Payment Mode</th>
            <td class="text-center"><input type="text" class="form-control" value="<%= data[0].payment_mode %>" readonly/></td>
            </tr>
              <tr>
            <th class="text-center">Payment Status</th>
            <td class="text-center"><input type="text" class="form-control" value="Succesfull" readonly/></td>
          </tr>
        </tbody>
				<hr>
      </table>

    </div>
  </div>
</div>
</form>
</div>
<%- include('partials/footer.ejs') -%>
</body>

<html>
